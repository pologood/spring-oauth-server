<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demai.entity.Members">
    <resultMap id="membersMap" type="com.demai.entity.Members">
        <id column="tkey" property="tkey" jdbcType="VARCHAR"/>
        <result column="uid" property="uid" jdbcType="BIGINT"/>

        <result column="cid" property="cid" jdbcType="BIGINT"/>

    </resultMap>

    <insert id="insert" parameterType="com.demai.entity.Members"
            useGeneratedKeys="true" keyProperty="id">
        <!-- insert into basic (tkey,uid,name,tid,type,content,is_repost,time)
          values (#{tkey},#{uid},#{name},#{tid},#{type},#{content},#{isRepost},#{time}) -->
    </insert>

    <delete id="deleteById" parameterType="string">
      delete from members where tkey = #{tkey}
    </delete>

    <update id="update" parameterType="com.demai.entity.Members">
        <!-- update basic
        <set>
            <if test="name != null">
                name = #{name},
            </if>


        </set>
        where tkey = #{tkey}  -->
    </update>

    <select id="findById" parameterType="long" resultMap="membersMap">
		 select * from members where tkey = #{tkey}
	</select>




    <select id="findMembers" parameterType="map" resultMap="membersMap">
		select tkey,uid,cid from members where 1 = 1

        <if test="uids != null">
            and uid in
            <foreach collection="uids" item="item" index="index"
                     open="(" separator="," close=")">#{item}
            </foreach>

        </if>

        order by tkey desc

	</select>

</mapper>
